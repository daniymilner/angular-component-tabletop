div(ng-controller='tableCtrl as table')
	md-content.md-padding
		md-tabs(md-dynamic-height, md-border-bottom)
			md-tab(ng-repeat='(tab_index, tab) in table.data.companies', label="{{tab.company_name}}")
				md-content
					md-table-container
						table.md-table
							thead.md-head
								tr.md-row
									th
										sub Component
										| \
										sup Version
									th.md-column.centred(ng-repeat='version in table.data.versions', ng-bind='version')
							tbody.md-body
								tr.md-row(ng-repeat='component in table.data.companies[tab_index].components')
									td.md-cell.centred(ng-bind='component.name')
									td.md-cell.centred(ng-repeat='version in component.versions')
										md-checkbox.md-primary(ng-show='version.data.version', aria-label='version.data.version') {{version.data.version}}
										span(ng-hide='version.data.version')
											i.material-icons close