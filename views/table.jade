div(ng-controller='tableCtrl as table')
	md-content.md-padding
		md-tabs(md-dynamic-height, md-border-bottom, ng-if='table.data.companies.length')
			md-tab(ng-repeat='(tab_index, tab) in table.data.companies', label="{{tab.company_name}}")
				md-content
					md-table-container
						table.md-table.md-padding
							thead.md-head
								tr.md-row
									th.md-title
										sub Component
										| \
										sup Version
									th.centred.md-title(ng-repeat='(vIndex, version) in table.data.versions')
										p(ng-bind='version', ng-click='table.checkColumn(vIndex, tab_index)')
							tbody.md-body
								tr.md-row(ng-repeat='(cIndex, component) in table.data.companies[tab_index].components')
									td.md-cell.separate.md-title(ng-bind='component.name', ng-click='table.checkRow(cIndex, tab_index)')
									td.centred.separate(ng-repeat='version in component.versions')
										md-checkbox.md-primary(ng-show='version.data.version', aria-label='version.data.version', ng-click='table.toggle(version, tab.company_name)', ng-model='version.checked') {{version.data.version}}
										span(ng-hide='version.data.version') -
		p.md-title(ng-if='!table.data.companies.length') Database empty

